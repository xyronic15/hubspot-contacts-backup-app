<div class="flex justify-between">
  <h1 class="text-2xl font-bold">Contacts</h1>
  <%= button_to "Run Backup", backup_contacts_path, class: "border border-gray-200 rounded shadow px-2 py-1 hover:bg-gray-100", method: :patch %>
</div>
<div id="pages" class="flex flex-col divide-y divide-gray-200 my-2">
  <div class="p-4 -mx-4">
    <div class="grid grid-cols-6 divide-x">
      <div class="px-2">
        <div class="font-bold">ID</div>
      </div>
      <div class="px-2">
        <h5 class="font-bold">Full Name</h5>
      </div>
      <div class="px-2">
        <div class="font-bold">Email</div>
      </div>
      <div class="px-2">
        <div class="font-bold">Created At</div>
      </div>
      <div class="px-2">
        <div class="font-bold">Last Updated</div>
      </div>
      <div class="px-2">
        <div class="font-bold">Archived</div>
      </div>
    </div>
  </div>
  <%= render @contacts %>
</div>

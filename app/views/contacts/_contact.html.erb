<div class="p-4 -mx-4 hover:bg-gray-100">
  <div class="grid grid-cols-5 divide-x">
    <div class="px-2">
      <div class="text-sm text-gray-700"><%= contact.id %></div>
    </div>
    <div class="px-2">
      <h5 class="font-bold text-sm"><%= contact.firstname %> <%= contact.lastname%></h5>
    </div>
    <div class="px-2">
      <div class="text-sm text-gray-700"><%= contact.email %></div>
    </div>
    <div class="px-2">
      <div class="text-sm text-gray-700"><%= contact.created_at %></div>
    </div>
    <div class="px-2">
      <div class="text-sm text-gray-700"><%= contact.updated_at %></div>
    </div>
  </div>
</div>
